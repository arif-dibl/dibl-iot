{
  "options": {
    "center": [23.8, 90.35],
    "bounds": [90,23.51,90.52,24.05],
    "zoom": 15,
    "minZoom": 0,
    "maxZoom": 14,
    "boxZoom": false,
    "geocodeUrl": "https://nominatim.openstreetmap.org"
  },
  "version": 8,
  "sources": {
    "vector_tiles": {
      "type": "vector",
      "url": "mbtiles://mapdata.mbtiles"
    }
  },
  "sprite": "map/sprites/bright-v9",
  "glyphs": "{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {"background-color": "rgb(239,239,239)"}
    },
    {
      "id": "landuse_residential",
      "type": "fill",
      "source": "vector_tiles",
      "source-layer": "landuse",
      "filter": ["==", "class", "residential"],
      "paint": {"fill-color": "hsla(0, 3%, 85%, 0.84)"}
    },
    {
      "id": "landcover_grass",
      "type": "fill",
      "source": "vector_tiles",
      "source-layer": "landcover",
      "filter": ["==", "class", "grass"],
      "paint": {
        "fill-color": "rgba(189, 220, 169, 1)",
        "fill-opacity": 0.5
      }
    },
    {
      "id": "waterway_river",
      "type": "line",
      "source": "vector_tiles",
      "source-layer": "waterway",
      "filter": ["==", "class", "river"],
      "paint": {
        "line-color": "#a0c8f0",
        "line-width": {"base": 1.2, "stops": [[11, 0.5], [20, 6]]}
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "vector_tiles",
      "source-layer": "water",
      "paint": {"fill-color": "rgba(176, 199, 253, 1)"}
    },
    {
      "id": "road_street",
      "type": "line",
      "source": "vector_tiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "street", "street_limited"],
      "paint": {
        "line-color": "#fff",
        "line-width": {"base": 1.2, "stops": [[13, 1], [20, 15]]}
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "vector_tiles",
      "source-layer": "building",
      "minzoom": 13,
      "paint": {
        "fill-color": "hsl(35, 8%, 85%)",
        "fill-outline-color": "hsl(35, 6%, 79%)"
      }
    },
    {
      "id": "road_label",
      "type": "symbol",
      "source": "vector_tiles",
      "source-layer": "transportation_name",
      "layout": {
        "symbol-placement": "line",
        "text-field": "{name}",
        "text-font": ["Open Sans Regular"],
        "text-size": 12
      },
      "paint": {
        "text-color": "#765",
        "text-halo-width": 1
      }
    },
    {
      "id": "place_city",
      "type": "symbol",
      "source": "vector_tiles",
      "source-layer": "place",
      "filter": ["==", "class", "city"],
      "layout": {
        "text-field": "{name_en}",
        "text-font": ["Open Sans Semibold"],
        "text-size": {"base": 1.2, "stops": [[7, 14], [11, 24]]}
      },
      "paint": {
        "text-color": "#333",
        "text-halo-color": "rgba(255,255,255,0.8)",
        "text-halo-width": 1.2
      }
    }
  ]
}